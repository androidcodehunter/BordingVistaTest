<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sharif.bordingvistatestapp.activities.ProductActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <EditText
        android:id="@+id/product_edit_text"
        style="@style/home_button_style"
        android:gravity="center"
        android:textColorHint="@android:color/white"
        android:hint="@string/hint_promotion_text"/>

    <EditText
        android:id="@+id/promotion_edit_text"
        style="@style/home_button_style"
        android:gravity="center"
        android:editable="false"
        android:textColorHint="@android:color/white"
        android:hint="@string/hint_promotion_text"/>

    <Button
        android:id="@+id/product_save_button"
        style="@style/home_button_style"
        android:text="@string/text_button_save"/>


</LinearLayout>
